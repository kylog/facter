{
    "$schema":     "http://json-schema.org/draft-04/schema#",
    "title":       "Facter built-in facts",
    "description": "All the built-in facts for facter cross-platform",
    "type":        "object",
    "properties": {
        "network_interfaces": {
            "type": "array",
            "items": {
                "patternProperties": {
                    "[A-Za-z0-9]+": {
                        "type": "object",
                        "properties": {
                            "mtu": { "type": "integer" },
                            "mac": { "type": "string"}
                        }
                    }
                }
            }
        }
    }
}
